<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:background="#ffffff"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transmissão"
                android:id="@+id/textView4"
                android:textColor="#070707"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="A transmissão do Campeonato Paraense de 2016 é realizada pela TV Cultura, detentora dos direitos de transmissão para Televisão e Internet."
                android:paddingTop="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#050505"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Para assistir a competiçao, a TV Cultura (Canal 02) realiza a transmissão dos jogos de forma ao vivo."
                android:id="@+id/textView7"
                android:paddingTop="5dp"
                android:textColor="#030303"
                android:textSize="16dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Você também pode acompanhar a transmissão dos jogos através da internet pelo Portal Cultura"
                android:id="@+id/textView8"
                android:paddingTop="5dp"
                android:textSize="16dp"
                android:textColor="#050505"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Portal Cultura"
                    android:id="@+id/button"
                    android:onClick="goToUrl"
                    android:clickable="true" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>